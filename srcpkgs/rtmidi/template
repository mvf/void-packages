# Template file for 'rtmidi'
pkgname=rtmidi
version=5.0.0
revision=1
build_style=cmake
hostmakedepends="pkg-config"
makedepends="alsa-lib-devel jack-devel"
short_desc="C++ classes for realtime MIDI input/output"
maintainer="Duncaen <duncaen@voidlinux.org>"
license="MIT"
homepage="https://www.music.mcgill.ca/~gary/rtmidi/"
distfiles="https://github.com/thestk/rtmidi/archive/${version}.tar.gz"
checksum=c7923e4eee82b06c007435892cb2c3212d9007fa482c6b718943bda71c02c5a7

post_install() {
	vlicense LICENSE
}

rtmidi-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.so"
		vmove usr/share/rtmidi
	}
}
