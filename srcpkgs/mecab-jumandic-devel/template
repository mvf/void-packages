mecab-jumandic-utf8_package() {
	short_desc="Juman dictionary for MeCab - UTF-8 encoding"
	noarch=yes
	pkg_install() {
		local _dicdir="$PKGDESTDIR/var/lib/mecab/dic/juman-utf8"
		install -d -m 755 "$_dicdir"
		/usr/libexec/mecab/mecab-dict-index -d "$PWD" -o "$_dicdir" -f utf-8 -t utf-8
		cp dicrc "$_dicdir/"
	}
}
